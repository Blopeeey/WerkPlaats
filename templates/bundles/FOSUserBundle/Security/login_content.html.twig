{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form class="login" action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

{#    <label class="inputfield--label" for="username">{{ 'security.login.username'|trans }}</label>#}
    <input class="inputfield--login" placeholder="Username" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />

{#    <label class="inputfield--label" for="password">{{ 'security.login.password'|trans }}</label>#}
    <input class="inputfield--login" placeholder="Password" type="password" id="password" name="_password" required="required" autocomplete="current-password" />

    <div class="checkbox-div--login">
    <input class="checkbox--login" type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>

    <input class="loginbutton" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>
